{
  "name": "@yobta/ui",
  "version": "0.0.4",
  "description": "ui",
  "main": "index.js",
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "vitest src --coverage --run",
    "check-all": "npm run test && eslint src && check-dts && size-limit && yaspeller *.md",
    "typecheck": "tsc --noEmit",
    "storybook": "start-storybook -p 6006 --no-manager-cache",
    "build-storybook": "BASE_URL=/ui/ build-storybook",
    "update": "ncu -u",
    "deploy-storybook": "gh-pages -d storybook-static"
  },
  "sideEffects": false,
  "type": "module",
  "types": "./lib/index.d.ts",
  "typesVersions": {
    "*": {
      "react": [
        "./lib/adapters/react/index.d.ts"
      ]
    }
  },
  "exports": {
    ".": "./lib/index.js",
    "./tailwind-preset": "./lib/tailwind-preset/index.cjs",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": "^14.0.0 || >=16.0.0"
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@logux/eslint-config": "^47.2.0",
    "@logux/sharec-config": "^0.13.1",
    "@storybook/addon-actions": "^6.5.5",
    "@storybook/addon-essentials": "^6.5.5",
    "@storybook/addon-interactions": "^6.5.5",
    "@storybook/addon-links": "^6.5.5",
    "@storybook/builder-vite": "^0.1.35",
    "@storybook/react": "^6.5.5",
    "@storybook/testing-library": "^0.0.11",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "@vitejs/plugin-react": "^1.3.2",
    "autoprefixer": "^10.4.7",
    "babel-loader": "^8.2.5",
    "eslint": "^8.16.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.0.0",
    "gh-pages": "^4.0.0",
    "happy-dom": "^4.1.0",
    "npm-check-updates": "^13.0.3",
    "postcss": "^8.4.14",
    "react-dom": "^18.1.0",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.7.2",
    "vite": "^2.9.9",
    "vitest": "^0.12.9"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yobta/ui.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yobta/ui/issues"
  },
  "homepage": "https://github.com/yobta/ui#readme",
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/lint-staged"
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "prettier --write",
    "*.ts": "prettier --write"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/ts",
    "rules": {
      "import/extensions": 0
    }
  },
  "eslintIgnore": [
    "**/errors.ts"
  ],
  "clean-publish": {
    "cleanDocs": true
  },
  "publishConfig": {
    "access": "public"
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.13.1"
  }
}
